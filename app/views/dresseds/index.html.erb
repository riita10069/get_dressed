<p id="notice"><%= notice %></p>

<h1>Dresseds</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dresseds.each do |dressed| %>
      <tr>
        <td><%= dressed.day %></td>
        <td><%= link_to 'Show', dressed %></td>
        <td><%= link_to 'Edit', edit_dressed_path(dressed) %></td>
        <td><%= link_to 'Destroy', dressed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dressed', new_dressed_path %>
